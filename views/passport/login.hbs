<div class="container-all pt-3">
  <div class="centered-box w-50 shadow-lg">
    <h2>Login</h2>
    <form action="/login" method="post" id="form-container">
      <div>
        <input type="text" name="username" id="username" placeholder="Username" class="mb-2 p-1 w-100">
      </div>
      <div>
        <input type="password" name="password" id="password" placeholder="Password" class="mb-2 p-1 w-100">
      </div>
      <button class="mb-2 p-1 w-100">Login</button>
      <p>You don't have an account? <a href="/signup" class="btn-log-sign">Sign Up</a></p>
    </form>
  </div>
  {{#if message}}
  <div class="error-message"> {{message}} </div>
  {{/if}}
</div>